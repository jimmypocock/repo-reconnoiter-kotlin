# EditorConfig - Coding style consistency across IDEs
# See: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
indent_style = space
max_line_length = 120

# Kotlin-specific settings (ktlint compatible)
ij_kotlin_code_style_defaults = KOTLIN_OFFICIAL

# Disable file header requirement (we don't need copyright headers)
ktlint_standard_filename = disabled
ktlint_standard_no-consecutive-comments = disabled

# Import ordering (matches IntelliJ Project.xml)
# Groups separated by blank lines:
# 1. jakarta.*, javax.*
# 2. org.hibernate.* (third-party)
# 3. org.springframework.*
# 4. java.*, kotlin.*, kotlinx.*
# 5. com.reconnoiter.* (application)
# 6. All other imports
ij_kotlin_imports_layout = jakarta.**,javax.**,|,org.hibernate.**,|,org.springframework.**,|,java.**,kotlin.**,kotlinx.**,|,com.reconnoiter.**,|,*

# Disable wildcard imports (always use explicit imports)
ij_kotlin_name_count_to_use_star_import = 2147483647
ij_kotlin_name_count_to_use_star_import_for_members = 2147483647
ij_kotlin_packages_to_use_import_on_demand =

# Formatting
ij_kotlin_allow_trailing_comma = true
ij_kotlin_align_multiline_parameters = false

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.properties]
indent_size = 2
indent_style = space

[*.gradle.kts]
indent_size = 4
indent_style = space

[*.xml]
indent_size = 2
indent_style = space
